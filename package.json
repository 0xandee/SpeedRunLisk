{
  "name": "speedrun-lisk",
  "version": "0.0.1",
  "private": true,
  "workspaces": {
    "packages": [
      "packages/*"
    ]
  },
  "scripts": {
    "account": "yarn hardhat:account",
    "account:generate": "yarn workspace @speedrun-lisk/hardhat account:generate",
    "account:import": "yarn workspace @speedrun-lisk/hardhat account:import",
    "build": "yarn next:build",
    "chain": "yarn hardhat:chain",
    "compile": "yarn hardhat:compile",
    "db:seed": "yarn workspace @speedrun-lisk/nextjs db:seed",
    "db:reset": "yarn workspace @speedrun-lisk/nextjs db:reset",
    "deploy": "yarn hardhat:deploy",
    "drizzle-kit": "yarn workspace @speedrun-lisk/nextjs drizzle-kit",
    "fork": "yarn hardhat:fork",
    "format": "yarn next:format && yarn hardhat:format",
    "generate": "yarn account:generate",
    "hardhat:account": "yarn workspace @speedrun-lisk/hardhat account",
    "hardhat:chain": "yarn workspace @speedrun-lisk/hardhat chain",
    "hardhat:check-types": "yarn workspace @speedrun-lisk/hardhat check-types",
    "hardhat:compile": "yarn workspace @speedrun-lisk/hardhat compile",
    "hardhat:deploy": "yarn workspace @speedrun-lisk/hardhat deploy",
    "hardhat:flatten": "yarn workspace @speedrun-lisk/hardhat flatten",
    "hardhat:fork": "yarn workspace @speedrun-lisk/hardhat fork",
    "hardhat:format": "yarn workspace @speedrun-lisk/hardhat format",
    "hardhat:generate": "yarn workspace @speedrun-lisk/hardhat generate",
    "hardhat:hardhat-verify": "yarn workspace @speedrun-lisk/hardhat hardhat-verify",
    "hardhat:lint": "yarn workspace @speedrun-lisk/hardhat lint",
    "hardhat:lint-staged": "yarn workspace @speedrun-lisk/hardhat lint-staged",
    "hardhat:test": "yarn workspace @speedrun-lisk/hardhat test",
    "hardhat:verify": "yarn workspace @speedrun-lisk/hardhat verify",
    "postinstall": "husky install",
    "lint": "yarn nextjs:lint && yarn hardhat:lint",
    "next:build": "yarn workspace @speedrun-lisk/nextjs build",
    "next:check-types": "yarn workspace @speedrun-lisk/nextjs check-types",
    "next:format": "yarn workspace @speedrun-lisk/nextjs format",
    "next:lint": "yarn workspace @speedrun-lisk/nextjs lint",
    "next:serve": "yarn workspace @speedrun-lisk/nextjs serve",
    "precommit": "lint-staged",
    "start": "yarn workspace @speedrun-lisk/nextjs dev",
    "test": "yarn hardhat:test",
    "vercel": "yarn workspace @speedrun-lisk/nextjs vercel",
    "vercel:login": "yarn workspace @speedrun-lisk/nextjs vercel:login",
    "vercel:yolo": "yarn workspace @speedrun-lisk/nextjs vercel:yolo",
    "verify": "yarn hardhat:verify"
  },
  "devDependencies": {
    "husky": "~9.1.6",
    "lint-staged": "~13.2.2",
    "tsx": "^4.20.5"
  },
  "packageManager": "yarn@3.2.3",
  "engines": {
    "node": ">=22.18.0"
  },
  "dependencies": {
    "@vercel/analytics": "^1.5.0"
  }
}
